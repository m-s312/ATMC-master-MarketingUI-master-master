
@{
    ViewBag.Title = "RequestConfirmation";
}
    <head>
        <link href="~/Content/requestconfirmationcss.css" rel="stylesheet" />
        <style>

        </style>
    </head>
@using (Html.BeginForm("RequestConfirmation", "ServiceAgreement"))
{
    @Html.AntiForgeryToken()
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img class="logo" src="~/Images/logo.jpg" alt="" />

            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <div class="dropdown">
                            <a class="nav-link" href="#">
                                @{
                                    if (Session["UserName"] != null)
                                    {
                                        @Session["UserName"]
                                    }
                                } <span class="fa fas fa-angle-down ml-3 mt-3"></span>
                                
                            </a>
                            <div class="dropdown-content">
                                @Html.ActionLink("Logout", "LogOut", "Login")
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        <div class="breadcrumb">
            <div class="breadcrumb-item"><a href="#">Home</a></div>
            <span class="fa fas fa-chevron-circle-right mt-1 mr-3 ml-3"></span>
            <div class="breadcrumb-item active" aria-current="page">New Services</div>
        </div>
    </div>
    <div class="border">
        <div class="wrapper">

            <div id="pointer0">
                <p id="step1" class="step">Request Confirmation</p>
            </div>

        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <section>
            <article>
                <div style="font-size:20px;">
                    <p>Thank you for your request from the Marketing department of IMC. </p>
                    <p>I would like to inform you that we received your request (# 333999) and it is our pleasure to support you.</p>
                    <p>Our marketing team is currently reviewing your request and we will get back to you within the coming 3 business days. </p>
                </div>
                <div>
                    <p>Thank you again,  </p>
                </div>

                <div style="font-size:11px;">
                    <p>Marketing Department  </p>
                    <p>International Medical Center</p>
                </div>
            </article>
        </section>
        <div class="card">
            <div class="card-body">
                <input type="submit" value="Done" class="btn" onclick="DoneClick()" />
            </div>
        </div>



    </div>
}

<script>
    function DoneClick() {
        alert('Your request has been submitted successfully!');
    }
</script>


