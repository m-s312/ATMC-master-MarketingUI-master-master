
@{
    ViewBag.Title = "ServiceCategories";
}
    <head>
        <link href="~/Content/servicecategoriescss.css" rel="stylesheet" />
        <style>

        </style>
    </head>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img class="logo" src="~/Images/logo.jpg" alt="" />

            </a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <div class="dropdown">
                            <a class="nav-link" href="#">
                                @{
                                    if (Session["UserName"] != null)
                                    {
                                        @Session["UserName"]
                                    }
                                } <span class="fa fas fa-angle-down ml-3 mt-3"></span>
                                
                            </a>
                            <div class="dropdown-content">
                                @Html.ActionLink("Logout", "LogOut", "Login")
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        <div class="breadcrumb">
            <div class="breadcrumb-item"><a href="#">Home</a></div>
            <span class="fa fas fa-chevron-circle-right mt-1 mr-3 ml-3"></span>
            <div class="breadcrumb-item active" aria-current="page">New Services</div>
        </div>
    </div>
    <div class="border">
        <div class="wrapper">

            <div id="pointer0">
                <p id="step1" class="step">Service Details</p>
            </div>

        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <section>
            <article>
                <div class="form-check second-col-checkboxes">
                    <span style="font-size: 20px;padding:0 15px 15px 0px"> Copy Writing</span>
                    <a href="@Url.Action("copywriting", "Services")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 20px;"></span>
                    </a>
                </div>
                <div class="form-check second-col-checkboxes">
                    <span style="font-size: 20px;padding:0 60px 15px 0px"> Designs</span>
                    <a href="@Url.Action("Designs", "Services")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 20px;"></span>
                    </a>
                </div>
                <div class="form-check second-col-checkboxes">
                    <span style="font-size: 20px;padding:0 70px 15px 0px"> Events</span>
                    <a href="@Url.Action("Events", "Services")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 20px;"></span>
                    </a>
                </div>
                <div class="form-check second-col-checkboxes">
                    <span style="font-size: 20px;padding:0 15px 15px 0px"> Social Media </span>

                    <a href="@Url.Action("SocialMedia", "Services")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 20px;"></span>
                    </a>
                </div>
                <div class="form-check second-col-checkboxes">
                    <span style="font-size: 20px;padding:0 15px 15px 0px"> IMC Website</span>

                    <a href="@Url.Action("IMCWebsite", "Services")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 20px;"></span>
                    </a>
                </div>
                <div class="form-check second-col-checkboxes">
                    <span style="font-size: 20px;padding:0 30px 15px 0px"> Production</span>

                    <a href="@Url.Action("Production", "Services")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 20px;"></span>
                    </a>
                </div>
                <div class="form-check second-col-checkboxes">
                    <span style="font-size: 20px;padding:0 30px 15px 0px"> Production</span>

                    <a href="@Url.Action("Email", "Services")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 20px;"></span>
                    </a>
                </div>
                <div class="form-check second-col-checkboxes">
                    <span style="font-size: 20px;padding:0 30px 15px 0px"> Production</span>

                    <a href="@Url.Action("SMS", "Services")">
                        <span class="glyphicon glyphicon-arrow-right" aria-hidden="true" style="font-size: 20px;"></span>
                    </a>
                </div>
            </article>
        </section>
       
    </div>

}

