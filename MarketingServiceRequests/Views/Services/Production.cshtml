@model MarketingServiceRequests.Models.ServiceProduction

@{
    ViewBag.Title = "Production";
}

    <head>
        <link href="~/Content/productioncss.css" rel="stylesheet" />
        <style>

            /* Manish CSS Starts */

        </style>
        <script>
            $(document).ready(function () {
                $('input:submit').attr('disabled', false);
                $('input:file').change(function () {
                    if ($(this).val()) {
                        $('input:submit').removeAttr('disabled');
                    }
                });
                $("#VideoProduction_link").on('click', function (e) {
                    e.preventDefault();
                    $("#VideoProduction_input:hidden").trigger('click');
                });
                $('#VideoProduction_input').change(function (e) {
                    var FileName = e.target.files[0].name;
                    $('#VideoProduction_span').html(FileName);
                });
                $("#PhotographyCoverage_link").on('click', function (e) {
                    e.preventDefault();
                    $("#PhotographyCoverage_input:hidden").trigger('click');

                });
                $('#PhotographyCoverage_input').change(function (e) {
                    var FileName = e.target.files[0].name;
                    $('#PhotographyCoverage_span').html(FileName);
                });
                $("#VideographyCoveragee_link").on('click', function (e) {
                    e.preventDefault();
                    $("#VideographyCoveragee_input:hidden").trigger('click');

                });
                $('#VideographyCoveragee_input').change(function (e) {
                    var FileName = e.target.files[0].name;
                    $('#VideographyCoveragee_span').html(FileName);
                });
                $("#PhotographySessions_link").on('click', function (e) {
                    e.preventDefault();
                    $("#PhotographySessions_input:hidden").trigger('click');

                });
                $('#PhotographySessions_input').change(function (e) {
                    var FileName = e.target.files[0].name;
                    $('#PhotographySessions_span').html(FileName);
                });
                $("#RecordingSession_link").on('click', function (e) {
                    e.preventDefault();
                    $("#RecordingSession_input:hidden").trigger('click');

                });
                $('#RecordingSession_input').change(function (e) {
                    var FileName = e.target.files[0].name;
                    $('#RecordingSession_span').html(FileName);
                });
                $("#PhotographyPermission_link").on('click', function (e) {
                    e.preventDefault();
                    $("#PhotographyPermission_input:hidden").trigger('click');

                });
                $('#PhotographyPermission_input').change(function (e) {
                    var FileName = e.target.files[0].name;
                    $('#PhotographyPermission_span').html(FileName);
                });

                $('input[type="file"]').change(function () {

                    //because this is single file upload I use only first index
                    var f = this.files[0]

                    //33554432 32 mb 32*1024*1024
                    if (f.size > 33554432) {
                        alert("Allowed file size exceeded. (Max. 32 MB)")
                        this.value = null;
                        var InputId = $(this).attr("id");
                        var SpanId = '#' + InputId.substring(0, InputId.length - 5) + 'span';
                        $(SpanId).html('');
                        $('input:submit').attr('disabled', false);
                    }
                });

            });
        </script>
    </head>

